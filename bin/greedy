#! /bin/sh

### BEGIN INIT INFO
# Provides:				greedy
# Required-Start:		$remote_fs $syslog
# Required-Stop:		$remote_fs $syslog
# Should-Start:			$network
# Should-Stop:			$network
# Default-Start:		2 3 4 5
# Default-Stop:			0 1 6
# Short-Description:	greedy
# Description:			Starts the greedy service in the background
### END INIT INFO

PATH=/sbin:/usr/sbin:/bin:/usr/bin

GREEDY="/srv/services/greedy/greedy"
GREEDY_NAME="greedy"
GREEDY_PID="/var/run/$GREEDY_NAME.pid"
GREEDY_LOG_DIR="/var/log/$GREEDY_NAME" ; mkdir -p $GREEDY_LOG_DIR
GREEDY_LOG_FILE="$GREEDY_LOG_DIR/$GREEDY_NAME.log"

SSD_PARAMS="--quiet --oknodo --pidfile $GREEDY_PID"

set -e
test -x $GREEDY || exit 0

. /lib/lsb/init-functions

case "$1" in
	start)
		log_daemon_msg "Starting Greedy service" "$GREEDY_NAME" || true
		if start-stop-daemon --start $SSD_PARAMS --make-pidfile --background --no-close --exec $GREEDY >> $GREEDY_LOG_FILE 2>&1; then
			log_end_msg 0 || true
		else
			log_end_msg 1 || true
		fi
		;;

	stop)
		log_daemon_msg "Stopping Greedy service" "$GREEDY_NAME" || true
		if start-stop-daemon --stop --retry 10 $SSD_PARAMS; then
			log_end_msg 0 || true
		else
			log_end_msg 1 || true
		fi
		;;

	restart)
		$0 stop
		$0 start
		;;

	status)
		status_of_proc -p $GREEDY_PID $GREEDY $GREEDY_NAME && exit 0 || exit $?
		;;

	*)
		log_action_msg "Usage: /etc/init.d/$GREEDY_NAME {start|stop|restart|status}" || true
		exit 1
esac

exit 0
